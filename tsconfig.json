{
    "compilerOptions": {
        "target": "esnext",
        "noEmit": true,
        "isolatedModules": true,
        "lib": [
            "dom",
            "ESNext.Array",
            "ES2019.Object",
            "ES2021",
        ],
        "module": "esnext",
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./"
    },
    "exclude": ["**/node_modules", "**/.*", "**/build", "**/dist"],
    "include": ["./packages/**/*", "./jest/setupTests.ts", "portal", "./node_modules/jest"]
}

{
    "compilerOptions": {
        "target": "ES2022",
        "noEmit": true,
        "isolatedModules": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2024",
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "skipLibCheck": true
    },
    "exclude": ["**/node_modules", "**/.*", "**/build", "**/dist"],
    "include": ["./packages/**/*", "./node_modules/jest"]
}

{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "turbo run clean && rimraf .turbo/ && rimraf node_modules/",
        "clean:portal": "turbo run clean:portal",
        "build": "turbo run build --scope=\"!@fremtind/*-config-jkl\" --cache-dir=\".turbo\"",
        "build:docs": "turbo run build:docs --scope=\"@fremtind/portal\" --include-dependencies --cache-dir=\".turbo\"",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -f --no-history --add --dist portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "run-p lint:eslint lint:stylelint",
        "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:stylelint": "stylelint --config=packages/stylelint-config-jkl/index.js '**/*.scss'",
        "lint:fix": "yarn run lint:eslint --fix && yarn run lint:stylelint --fix",
        "ci:test": "run-p test lint:eslint lint:stylelint typecheck",
        "ci:install": "yarn install --frozen-lockfile && yarn build",
        "ci:install-cypress": "yarn ci:install && yarn build:docs",
        "test": "yarn run test:unit",
        "test:unit": "jest",
        "test:watch": "jest --watch",
        "version:check": "lerna changed -l -a",
        "version": "lernacleanchangelog '**' && git add -A",
        "cypress:open": "ELECTRON_EXTRA_LAUNCH_ARGS=\"--force-prefers-reduced-motion\" cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish --conventional-graduate",
        "release-gh": "lerna publish from-package",
        "dev": "turbo run dev --scope=@fremtind/portal",
        "start": "yarn run dev",
        "serve": "turbo run serve --scope=@fremtind/portal",
        "patch": "yarn patch-package",
        "postinstall": "yarn patch",
        "boot": "yarn install --force && yarn build",
        "reboot": "yarn clean && yarn boot",
        "prepare": "husky install",
        "scaffold": "node './scripts/scaffold'"
    },
    "packageManager": "yarn@1.22.17",
    "resolutions": {
        "**/@graphql-tools/url-loader/ws": "^7.4.6",
        "**/cypress-plugin-snapshots/jimp": "^0.16.1",
        "**/diff2html/merge": "^2.1.1",
        "**/gatsby/multer": "v1.4.5-lts.1",
        "**/gatsby-source-filesystem/got": "^11.8.5",
        "**/package-json/got": "^11.8.5",
        "**/unidiff/diff": "^3.5.0",
        "ansi-html": "^0.0.8",
        "cross-fetch": "^3.1.5",
        "commitizen/minimist": "^1.2.6",
        "cz-lerna-changelog/shelljs": "^0.8.5",
        "engine.io": "^4.1.2",
        "file-type": "^16.5.4",
        "git-up": "^6.0.0",
        "glob-parent": "^6.0.2",
        "jpeg-js": "^0.4.2",
        "moment": "^2.29.4",
        "nth-check": "^2.0.1",
        "trim": "^0.0.3"
    },
    "dependencies": {
        "classnames": "^2.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/plugin-transform-runtime": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@testing-library/dom": "^8.16.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.3.0",
        "@types/classnames": "^2.3.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/jest-axe": "^3.5.4",
        "@types/node": "^17.0.40",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/react-syntax-highlighter": "^15.5.4",
        "@types/sass": "^1.43.1",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "autoprefixer": "^10.4.8",
        "browserslist": "^4.21.3",
        "commitizen": "^4.2.5",
        "cssnano": "^5.1.12",
        "cssnano-preset-lite": "^2.1.3",
        "cypress": "^10.3.1",
        "cypress-plugin-snapshots": "^1.4.4",
        "cz-lerna-changelog": "^2.0.3",
        "esbuild": "^0.14.51",
        "esbuild-plugin-browserslist": "^0.4.12",
        "esbuild-sass-plugin": "^2.3.1",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "express": "^4.18.1",
        "get-port": "^6.1.2",
        "gh-pages": "4.0.0",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "husky": "8.0.1",
        "jest": "^28.1.3",
        "jest-axe": "^6.0.0",
        "jest-environment-jsdom": "^28.1.3",
        "jest-watch-typeahead": "^2.0.0",
        "lerna": "^5.3.0",
        "lerna-clean-changelogs-cli": "^2.0.18",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "patch-package": "^6.4.7",
        "postcss": "^8.4.14",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.7.1",
        "prompt": "^1.3.0",
        "react-syntax-highlighter": "^15.5.0",
        "replace-in-file": "^6.3.5",
        "rimraf": "^3.0.2",
        "sass-embedded": "^1.53.0",
        "stylelint": "^14.9.1",
        "tiny-glob": "^0.2.9",
        "turbo": "^1.4.0",
        "typescript": "^4.7.4"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "actions/*",
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json,md,mdx}": [
            "prettier --write"
        ],
        "!(*integration).{png,jpg,jpeg}": [
            "node scripts/preoptimize-images"
        ],
        "*.{scss,css}": [
            "stylelint --fix --config=packages/stylelint-config-jkl/index.js"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

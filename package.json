{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "lerna run --parallel clean",
        "clean:portal": "lerna run clean:portal --stream",
        "build": "lerna run --ignore @fremtind/browserslist-config-jkl build",
        "build:style": "lerna run --ignore @fremtind/*-react --ignore @fremtind/jkl-react-hooks build",
        "build:docs": "lerna run build:docs",
        "build:docs:local": "lerna run build:local --stream",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -d portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "ci:test": "run-p test lint typecheck",
        "test": "yarn run test:unit",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "test:watch": "jest -c './jest/jest.unit.js' --watch",
        "version:check": "lerna changed -l -a",
        "cypress:open": "cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "dev": "lerna run --scope @fremtind/portal dev --stream",
        "start": "yarn run dev",
        "serve:portal": "lerna run serve --stream",
        "serve": "run-s clean:portal build:docs:local serve:portal",
        "boot": "yarn install --force && yarn build",
        "reboot": "yarn clean && yarn boot"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.4",
        "@babel/core": "^7.10.4",
        "@babel/plugin-proposal-optional-chaining": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@cypress/browserify-preprocessor": "^3.0.0",
        "@testing-library/dom": "^7.20.0",
        "@testing-library/jest-dom": "^5.11.0",
        "@testing-library/react": "^10.4.3",
        "@testing-library/react-hooks": "^3.3.0",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^26.0.3",
        "@types/jest-axe": "^3.2.2",
        "@types/node": "^14.0.14",
        "@types/react": "^16.9.43",
        "@types/react-dom": "^16.9.8",
        "@types/sass": "^1.16.0",
        "@types/vfile-message": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^3.5.0",
        "@typescript-eslint/parser": "^3.5.0",
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "autoprefixer": "^9.8.4",
        "commitizen": "^4.1.2",
        "cssnano": "^4.1.10",
        "cypress-axe": "^0.8.1",
        "cypress-plugin-snapshots": "^1.4.3",
        "cz-lerna-changelog": "^2.0.3",
        "dart-sass": "^1.25.0",
        "document-register-element": "^1.14.3",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-cypress": "^2.11.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^4.0.5",
        "fibers": "^5.0.0",
        "gh-pages": "^3.1.0",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "gulp-postcss": "^8.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.0",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-axe": "^3.4.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "node-sass-tilde-importer": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "prettier": "2.0.5",
        "react-test-renderer": "^16.13.1",
        "regenerator-runtime": "^0.13.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.18.2",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^6.1.0",
        "typescript": "^3.9.6",
        "vfile-message": "^2.0.4"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "git add"
        ]
    }
}

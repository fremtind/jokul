{
    "name": "@fremtind/jkl",
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "build:docs": "lerna run build:docs",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -d packages/storybook/storybook-static",
        "typecheck": "tsc --noEmit",
        "lint:formatting": "prettier -c '**/*.{js,jsx,ts,tsx}' '**/*.scss' '**/*.html'",
        "lint:scripts": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint": "yarn run lint:formatting && yarn run lint:scripts",
        "test": "jest -c './jest/jest.all.js'",
        "test:ci": "yarn test",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "dev": "parcel"
    },
    "dependencies": {
        "@types/react": "^16.8.17",
        "@types/react-dom": "^16.8.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@storybook/addon-actions": "^5.1.3",
        "@storybook/addon-info": "^5.1.3",
        "@storybook/addon-knobs": "^5.1.4",
        "@storybook/react": "^5.1.3",
        "@testing-library/dom": "^5.5.0",
        "@testing-library/react": "^8.0.1",
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.2",
        "@types/sass": "^1.16.0",
        "@types/storybook__addon-knobs": "^5.0.1",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.11.0",
        "commitizen": "^3.1.1",
        "cz-lerna-changelog": "^2.0.0",
        "document-register-element": "^1.13.2",
        "eslint": "^6.0.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-react": "^7.13.0",
        "gh-pages": "^2.0.1",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "jest-dom": "^3.5.0",
        "lerna": "^3.14.1",
        "lint-staged": "^8.1.7",
        "mkdirp": "^0.5.1",
        "ncp": "^2.0.0",
        "node-sass": "^4.12.0",
        "node-sass-tilde-importer": "^1.0.2",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.17.1",
        "rollup": "^1.15.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.0.0",
        "rollup-plugin-node-resolve": "^5.0.1",
        "typescript": "^3.4.5"
    },
    "workspaces": [
        "packages/*"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "version": "0.0.0",
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "git add",
            "eslint"
        ]
    },
    "browserslist": [
        "Chrome > 60",
        "IE 11"
    ]
}

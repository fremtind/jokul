{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "lerna run --parallel clean",
        "clean:portal": "lerna run clean:portal --stream",
        "build": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build --stream",
        "build:quiet": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build",
        "build:style": "lerna run --ignore @fremtind/*-react --ignore @fremtind/jkl-react-hooks build",
        "build:docs": "lerna run --scope @fremtind/portal build --stream",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -d portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "ci:test": "run-p test lint typecheck",
        "ci:install": "yarn install --frozen-lockfile && yarn patch-package",
        "test": "yarn run test:unit",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "test:watch": "jest -c './jest/jest.unit.js' --watch",
        "version:check": "lerna changed -l -a",
        "version": "lernacleanchangelog '**' && git add -A",
        "cypress:open": "cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "release-gh": "lerna publish from-package",
        "dev": "lerna run --scope @fremtind/portal dev --stream",
        "start": "yarn run dev",
        "serve": "lerna run build:test --stream",
        "server": "lerna run --scope @fremtind/portal serve --stream",
        "boot": "yarn install --force && yarn build",
        "reboot": "yarn clean && yarn boot",
        "prepare": "husky install",
        "scaffold": "node './scripts/scaffold' && yarn install"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.0",
        "@babel/plugin-proposal-optional-chaining": "^7.16.0",
        "@babel/plugin-transform-runtime": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "@babel/preset-react": "^7.16.0",
        "@babel/preset-typescript": "^7.16.0",
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "@cypress/browserify-preprocessor": "^3.0.1",
        "@parcel/config-default": "^2.0.0",
        "@parcel/transformer-sass": "^2.0.0",
        "@parcel/transformer-typescript-tsc": "^2.0.0",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@testing-library/dom": "^8.10.1",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^12.0.0",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/classnames": "^2.2.10",
        "@types/faker": "^5.5.9",
        "@types/jest": "^27.0.1",
        "@types/jest-axe": "^3.2.2",
        "@types/node": "^16.11.6",
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "@types/sass": "^1.43.0",
        "@types/sinon": "^10.0.6",
        "@types/vfile-message": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "autoprefixer": "^10.4.0",
        "commitizen": "^4.1.2",
        "cssnano": "^5.0.9",
        "cypress": "^8.7.0",
        "cypress-axe": "^0.13.0",
        "cypress-plugin-snapshots": "^1.4.4",
        "cz-lerna-changelog": "^2.0.3",
        "document-register-element": "^1.14.3",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-cypress": "^2.11.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.2.1-alpha-930c9e7ee-20211015",
        "faker": "^5.5.3",
        "gh-pages": "^3.1.0",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "jest-axe": "^5.0.1",
        "jest-watch-typeahead": "^1.0.0",
        "lerna": "^4.0.0",
        "lerna-clean-changelogs-cli": "^2.0.3",
        "lint-staged": "^11.2.6",
        "node-notifier": "^10.0.0",
        "node-sass-tilde-importer": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.0.0",
        "patch-package": "^6.2.2",
        "postcss": "^8.3.11",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.3.2",
        "prompt": "^1.2.0",
        "react-test-renderer": "^17.0.1",
        "regenerator-runtime": "^0.13.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.59.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.43.4",
        "sinon": "^11.1.1",
        "typescript": "^4.4.4",
        "vfile-message": "^3.0.1"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json}": [
            "prettier --write"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

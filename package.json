{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "lerna run --parallel clean",
        "clean:portal": "lerna run clean:portal --stream",
        "build": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build --stream",
        "build:quiet": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build",
        "build:style": "lerna run --ignore @fremtind/*-react --ignore @fremtind/jkl-react-hooks build",
        "build:docs": "lerna run --scope @fremtind/portal build --stream",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -d portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
        "ci:test": "run-p test lint typecheck",
        "ci:install": "yarn install --ignore-engines",
        "test": "yarn run test:unit",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "test:watch": "jest -c './jest/jest.unit.js' --watch",
        "version:check": "lerna changed -l -a",
        "version": "lernacleanchangelog '**' && git add -A",
        "cypress:open": "cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "release-gh": "lerna publish from-package",
        "dev": "lerna run --scope @fremtind/portal dev --stream",
        "start": "yarn run dev",
        "serve": "lerna run build:test --stream",
        "boot": "yarn install --force && yarn build",
        "reboot": "yarn clean && yarn boot",
        "prepare": "husky install"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/plugin-proposal-optional-chaining": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@cypress/browserify-preprocessor": "^3.0.1",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@testing-library/dom": "^8.1.0",
        "@testing-library/jest-dom": "^5.11.2",
        "@testing-library/react": "^12.0.0",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.1.8",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^27.0.1",
        "@types/jest-axe": "^3.2.2",
        "@types/node": "^16.7.10",
        "@types/react": "^17.0.13",
        "@types/react-dom": "^17.0.0",
        "@types/sass": "^1.16.0",
        "@types/sinon": "^10.0.2",
        "@types/vfile-message": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "autoprefixer": "^9.8.4",
        "commitizen": "^4.1.2",
        "cssnano": "^4.1.10",
        "cypress-axe": "^0.13.0",
        "cypress-plugin-snapshots": "^1.4.4",
        "cz-lerna-changelog": "^2.0.3",
        "document-register-element": "^1.14.3",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-cypress": "^2.11.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "gh-pages": "^3.1.0",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "gulp-postcss": "^8.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "husky": "^7.0.0",
        "jest": "^27.0.5",
        "jest-axe": "^5.0.1",
        "jest-watch-typeahead": "^0.6.1",
        "lerna": "^4.0.0",
        "lerna-clean-changelogs-cli": "^2.0.0",
        "lint-staged": "^11.0.0",
        "node-notifier": "^10.0.0",
        "node-sass-tilde-importer": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "patch-package": "^6.2.2",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.3.2",
        "react-test-renderer": "^17.0.1",
        "regenerator-runtime": "^0.13.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.52.7",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.39.0",
        "sinon": "^11.1.1",
        "typescript": "^4.3.5",
        "vfile-message": "^3.0.1"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json}": [
            "prettier --write"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

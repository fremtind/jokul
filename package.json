{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "lerna run --parallel clean && rimraf node_modules/",
        "clean:portal": "lerna run clean:portal --stream",
        "build": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build --stream",
        "build:quiet": "yarn patch-package && lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal build",
        "build:style": "lerna run --ignore @fremtind/*-react --ignore @fremtind/*-util --ignore @fremtind/portal --ignore @fremtind/jkl-react-hooks build",
        "build:scripts": "lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal --ignore '@fremtind/!(*-react)' build:scripts --stream",
        "build:types": "lerna run --ignore @fremtind/browserslist-config-jkl --ignore @fremtind/portal --ignore '@fremtind/!(*-react)' build:types --stream",
        "build:docs": "lerna run --scope @fremtind/portal build --stream",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -d portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "run-p lint:eslint lint:stylelint",
        "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:stylelint": "stylelint --config=packages/stylelint-config-jkl/index.js '**/*.scss'",
        "lint:fix": "yarn run lint:eslint --fix && yarn run lint:stylelint --fix",
        "ci:test": "run-p test lint:eslint lint:stylelint typecheck",
        "ci:install": "yarn install --frozen-lockfile && yarn patch-package",
        "test": "yarn run test:unit",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "test:watch": "jest -c './jest/jest.unit.js' --watch",
        "version:check": "lerna changed -l -a",
        "version": "lernacleanchangelog '**' && git add -A",
        "cypress:open": "cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish",
        "release-gh": "lerna publish from-package",
        "dev": "lerna run --scope @fremtind/portal dev --stream",
        "start": "yarn run dev",
        "serve": "lerna run build:test --stream",
        "server": "lerna run --scope @fremtind/portal serve --stream",
        "boot": "yarn install --force && yarn build",
        "reboot": "yarn clean && yarn boot",
        "prepare": "husky install",
        "scaffold": "node './scripts/scaffold'"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.16.12",
        "@babel/plugin-transform-runtime": "^7.16.10",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@parcel/config-default": "^2.2.1",
        "@parcel/transformer-sass": "^2.2.1",
        "@parcel/transformer-typescript-tsc": "^2.2.1",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^27.4.0",
        "@types/jest-axe": "^3.2.2",
        "@types/node": "^17.0.14",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/sass": "^1.43.1",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "autoprefixer": "^10.4.2",
        "commitizen": "^4.1.2",
        "cssnano": "^5.0.16",
        "cssnano-preset-lite": "^2.0.2",
        "cypress": "^9.4.1",
        "cypress-plugin-snapshots": "^1.4.4",
        "cz-lerna-changelog": "^2.0.3",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-cypress": "^2.11.1",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "gh-pages": "^3.1.0",
        "glob": "^7.2.0",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "jest-axe": "^5.0.1",
        "jest-watch-typeahead": "^1.0.0",
        "lerna": "^4.0.0",
        "lerna-clean-changelogs-cli": "^2.0.12",
        "lint-staged": "^12.3.2",
        "node-sass-tilde-importer": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.2.1",
        "patch-package": "^6.2.2",
        "postcss": "^8.4.6",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.5.1",
        "prompt": "^1.2.1",
        "regenerator-runtime": "^0.13.5",
        "replace-in-file": "^6.3.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.67.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.49.7",
        "stylelint": "^14.3.0",
        "typescript": "^4.5.5"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json,md,mdx}": [
            "prettier --write"
        ],
        "!(*integration).{png,jpg,jpeg}": [
            "node scripts/preoptimize-images"
        ],
        "*.{scss,css}": [
            "stylelint --fix --config=packages/stylelint-config-jkl/index.js"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

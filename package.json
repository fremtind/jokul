{
    "name": "@fremtind/jkl",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "clean": "turbo run clean && rimraf node_modules/",
        "clean:portal": "turbo run clean:portal",
        "build": "turbo run build --scope=\"!@fremtind/*-config-jkl\" --cache-dir=\"node_modules/.cache/turbo\"",
        "build:docs": "turbo run build:docs --scope=\"@fremtind/portal\" --include-dependencies --cache-dir=\"node_modules/.cache/turbo\"",
        "commit": "git-cz",
        "predeploy:docs": "yarn run build:docs",
        "deploy:docs": "gh-pages -f --no-history --add --dist portal/public",
        "typecheck": "tsc --noEmit",
        "lint": "run-p lint:eslint lint:stylelint",
        "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
        "lint:stylelint": "stylelint --config=packages/stylelint-config-jkl/index.js '**/*.scss'",
        "lint:fix": "yarn run lint:eslint --fix && yarn run lint:stylelint --fix",
        "ci:test": "run-p test lint:eslint lint:stylelint typecheck",
        "ci:install": "yarn install --frozen-lockfile && yarn patch-package && yarn build",
        "ci:install-cypress": "yarn ci:install && yarn build:docs",
        "test": "yarn run test:unit",
        "test:unit": "jest -c './jest/jest.unit.js'",
        "test:watch": "jest -c './jest/jest.unit.js' --watch",
        "version:check": "lerna changed -l -a",
        "version": "lernacleanchangelog '**' && git add -A",
        "cypress:open": "cypress open --project .",
        "cypress:dev": "cypress open --project . --config baseUrl=http://localhost:8000",
        "prerelease": "yarn build",
        "release": "lerna publish --conventional-graduate",
        "release-gh": "lerna publish from-package",
        "dev": "turbo run dev --scope=@fremtind/portal",
        "start": "yarn run dev",
        "serve": "turbo run serve --scope=@fremtind/portal",
        "patch": "yarn patch-package",
        "boot": "yarn install --force && yarn patch && yarn build",
        "reboot": "yarn clean && yarn boot",
        "prepare": "husky install",
        "scaffold": "node './scripts/scaffold'"
    },
    "packageManager": "yarn@1.22.17",
    "dependencies": {
        "classnames": "^2.2.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.17.5",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@parcel/config-default": "^2.3.2",
        "@parcel/transformer-sass": "^2.3.2",
        "@parcel/transformer-typescript-tsc": "^2.3.2",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-commonjs": "^21.0.2",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^27.4.1",
        "@types/jest-axe": "^3.2.2",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.13",
        "@types/sass": "^1.43.1",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "autoprefixer": "^10.4.2",
        "commitizen": "^4.1.2",
        "cssnano": "^5.1.0",
        "cssnano-preset-lite": "^2.1.0",
        "cypress": "^9.5.1",
        "cypress-plugin-snapshots": "^1.4.4",
        "cz-lerna-changelog": "^2.0.3",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-cypress": "^2.11.1",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.2",
        "eslint-plugin-react-hooks": "^4.3.0",
        "gh-pages": "^3.1.0",
        "glob": "^7.2.0",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-axe": "^5.0.1",
        "jest-watch-typeahead": "^1.0.0",
        "lerna": "^4.0.0",
        "lerna-clean-changelogs-cli": "^2.0.12",
        "lint-staged": "^12.3.4",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.3.2",
        "patch-package": "^6.2.2",
        "postcss": "^8.4.7",
        "postinstall-postinstall": "^2.1.0",
        "prettier": "^2.5.1",
        "prompt": "^1.2.2",
        "replace-in-file": "^6.3.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.69.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass-embedded": "^1.49.9",
        "stylelint": "^14.5.3",
        "turbo": "^1.1.4",
        "typescript": "^4.6.2"
    },
    "browserslist": [
        "extends @fremtind/browserslist-config-jkl"
    ],
    "workspaces": [
        "packages/*",
        "portal"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "lint-staged": {
        "*.{scss,css,html,json,md,mdx}": [
            "prettier --write"
        ],
        "!(*integration).{png,jpg,jpeg}": [
            "node scripts/preoptimize-images"
        ],
        "*.{scss,css}": [
            "stylelint --fix --config=packages/stylelint-config-jkl/index.js"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

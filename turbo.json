{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "clean": {
            "outputs": [],
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", "*.css"]
        },
        "build:docs": {
            "dependsOn": ["build"],
            "env": ["PREVIEW_PATH"],
            "outputs": ["public/**", ".cache/**"]
        },
        "serve": {
            "outputs": [],
            "cache": false
        },
        "dev": {
            "outputs": [],
            "cache": false
        }
    },
    "globalDependencies": [
        "yarn.lock",
        "gulpfile.js",
        "esbuild.prod.mjs",
        "tsconfig-for-declarations.json",
        "tsconfig.json",
        "patches/**"
    ]
}

{
    "packages": ["packages/*", "portal"],
    "version": "independent",
    "useWorkspaces": true,
    "npmClient": "yarn",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "registry": "https://registry.npmjs.org/",
            "access": "public",
            "npmClient": "yarn",
            "allowBranch": ["main", "release"],
            "ignoreChanges": [
                ".eslintrc",
                ".prettierrc",
                ".gitignore",
                ".npmignore",
                ".npmrc",
                "*.md",
                "*.mdx",
                "*.test.js",
                "*.test.ts",
                "*.test.tsx",
                "jest/**/*"
            ],
            "message": "chore(release): publish [ci skip release]"
        }
    }
}

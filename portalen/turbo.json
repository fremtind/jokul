{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "cache": false,
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "serve": {
            "cache": false,
            "dependsOn": ["^serve"]
        }
    },
    "globalEnv": [
        "MONGODB_URL",
        "PAYLOADCMS_SECRET",
        "NODE_ENV",
        "PAYLOAD_CONFIG_PATH",
        "PAYLOAD_GENERATE",
        "PORT"
    ]
}

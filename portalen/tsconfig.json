{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "allowJs": true,
        "isolatedModules": true,
        "module": "NodeNext",
        "target": "ES2021",
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "jsx": "react-jsx"
    },
    "exclude": ["node_modules", "dist", "build", ".turbo"]
}

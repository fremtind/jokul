{
    "name": "@org/web",
    "version": "1.0.0",
    "description": "Public facing part of the app, built with Remix",
    "sideEffects": false,
    "license": "MIT",
    "exports": {
        ".": {
            "import": "./build/index.js",
            "require": "./build/index.js"
        },
        "./express": {
            "import": "./express.js",
            "require": "./express.js"
        }
    },
    "scripts": {
        "clean": "rm -rf node_modules build public/build .turbo",
        "build": "pnpm run build:sass && pnpm build:remix",
        "build:remix": "remix build",
        "build:sass": "sass app/:app/ --load-path=../../node_modules/",
        "dev": "pnpm build && run-p \"dev:*\"",
        "dev:sass": "sass --watch app/:app/ --load-path=../../node_modules/",
        "dev:remix": "remix watch",
        "typecheck": "tsc -p ./tsconfig.json"
    },
    "dependencies": {
        "@org/ui": "workspace:*",
        "@remix-run/express": "1.19.3",
        "@remix-run/node": "1.19.3",
        "@remix-run/react": "1.19.3",
        "@resvg/resvg-js": "^2.6.2",
        "@tanstack/react-query": "^4.36.1",
        "classnames": "^2.5.1",
        "cmdk": "^0.2.1",
        "escape-html": "^1.0.3",
        "framer-motion": "^10.18.0",
        "jkl-card-react^9.0.3": "link:@fremtind/jkl-card-react^9.0.3",
        "lru-cache": "^9.1.2",
        "mixpanel-browser": "^2.55.0",
        "prism-react-renderer": "^1.3.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-highlight-words": "^0.20.0",
        "react-hook-form": "^7.52.2",
        "react-live": "^3.2.0",
        "react-syntax-highlighter": "^15.5.0",
        "sass": "^1.77.8",
        "satori": "^0.4.14",
        "slate": "^0.91.4",
        "three": "^0.153.0",
        "use-debounce": "^9.0.4"
    },
    "devDependencies": {
        "@org/cms": "workspace:*",
        "@remix-run/dev": "1.19.3",
        "@remix-run/eslint-config": "1.19.3",
        "@types/escape-html": "^1.0.4",
        "@types/express": "^4.17.21",
        "@types/mixpanel-browser": "^2.49.1",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-highlight-words": "^0.16.7",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@types/three": "^0.152.1",
        "glob": "^8.1.0",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5"
    },
    "engines": {
        "node": ">=16"
    }
}

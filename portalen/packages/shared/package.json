{
    "name": "@org/shared",
    "description": "Shared code for the workspace",
    "version": "1.0.0",
    "license": "MIT",
    "main": "./src/index.ts",
    "exports": {
        ".": {
            "serve": {
                "types": "./dist/index.js",
                "require": "./dist/index.js",
                "import": "./dist/index.js"
            },
            "default": {
                "types": "./src/index.ts",
                "require": "./src/index.ts",
                "import": "./src/index.ts"
            }
        }
    },
    "scripts": {
        "build": "rm -rf dist && tsc -p tsconfig.json",
        "clean": "rm -rf node_modules dist .turbo",
        "lint": "eslint --ext .ts,.js./src",
        "typecheck": "tsc -p ./tsconfig.json"
    },
    "dependencies": {
        "dotenv": "^16.3.1"
    }
}

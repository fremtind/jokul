{
    "name": "@org/remix-server",
    "version": "1.0.0",
    "license": "MIT",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "clean": "turbo run clean && rm -rf node_modules",
        "build": "turbo run build",
        "serve": "turbo run serve",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "docker:build": "docker build --progress=plain --tag jkl-portal-prm:latest .",
        "docker:tag": "docker tag jkl-portal-prm:latest 197434302239.dkr.ecr.eu-west-1.amazonaws.com/jkl-portal-prm:latest",
        "docker:push": "docker push 197434302239.dkr.ecr.eu-west-1.amazonaws.com/jkl-portal-prm:latest"
    },
    "devDependencies": {
        "eslint": "^8.44.0",
        "prettier": "^2.8.8",
        "turbo": "^1.10.7",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "packageManager": "pnpm@8.6.7",
    "dependencies": {
        "@fremtind/stylelint-config-jkl": "^8.0.1",
        "express": "^4.18.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "payload": "^2.30.1",
        "stylelint": "^15.10.1"
    },
    "peerDependenciesMeta": {
        "express": {
            "optional": true
        }
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "express"
            ]
        },
        "patchedDependencies": {
            "flexsearch@0.7.31": "patches/flexsearch@0.7.31.patch"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,scss,css,html,json,md,mdx,yml}": [
            "prettier --write"
        ],
        "*.{scss,css}": [
            "stylelint --fix"
        ],
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix"
        ]
    }
}

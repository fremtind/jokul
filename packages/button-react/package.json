{
    "name": "@fremtind/jkl-button-react",
    "version": "13.0.22",
    "publishConfig": {
        "access": "public"
    },
    "description": "Jøkul react button components",
    "homepage": "https://github.com/fremtind/jokul/tree/main/packages/button-react",
    "keywords": [
        "button",
        "primary button",
        "secondary button",
        "tertiary button",
        "jøkul",
        "fremtind"
    ],
    "license": "MIT",
    "types": "./build/index.d.ts",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "browser": "./build/esm/index.js",
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "directories": {
        "lib": "build"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "clean": "rimraf node_modules/ build/ node_modules/",
        "build:types": "tsc -p tsconfig-for-declarations.json",
        "build:scripts": "node ./esbuild.prod.mjs",
        "build": "run-s build:*",
        "test": "jest --testMatch '**/button-react/**/*.test.+(ts|tsx|js)' --config=../../jest.config.js",
        "dev:js": "ESBUILD_WATCH=true node ./esbuild.dev.mjs",
        "dev:server": "nodemon ./dist/server.js",
        "dev": "run-p dev:*"
    },
    "dependencies": {
        "@fremtind/jkl-button": "^10.0.9",
        "@fremtind/jkl-core": "^12.2.0",
        "@fremtind/jkl-icons-react": "^7.2.6",
        "@fremtind/jkl-loader-react": "^11.0.7",
        "@fremtind/jkl-react-hooks": "^11.4.2",
        "classnames": "^2.3.2"
    },
    "devDependencies": {
        "@fremtind/jkl-toggle-switch-react": "^12.1.7"
    },
    "peerDependencies": {
        "@types/react": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "@types/react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "react": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fremtind/jokul.git"
    },
    "bugs": {
        "url": "https://github.com/fremtind/jokul/issues"
    }
}

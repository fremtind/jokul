{
    "name": "@fremtind/jkl-loader-react",
    "version": "7.1.12",
    "publishConfig": {
        "access": "public"
    },
    "description": "Jøkul react loader component",
    "homepage": "https://jokul.fremtind.no",
    "keywords": [
        "loader",
        "jøkul",
        "fremtind"
    ],
    "license": "MIT",
    "types": "./build/index.d.ts",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "browser": "./build/browser/index.js",
    "directories": {
        "lib": "build"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "clean": "rimraf .turbo/ build/ node_modules/",
        "build:types": "tsc -p tsconfig-for-declarations.json",
        "build:scripts": "rollup --config ../../rollup.config.js",
        "build": "run-s build:*",
        "test": "echo \"Error: run tests from root\" && exit 1",
        "dev:style": "lerna exec --scope=@fremtind/jkl-loader yarn build:watch",
        "dev:js": "parcel documentation/index.html",
        "dev": "run-p dev:*"
    },
    "dependencies": {
        "@babel/runtime": "^7.17.2",
        "@fremtind/jkl-loader": "^7.1.11",
        "classnames": "^2.2.6"
    },
    "peerDependencies": {
        "@types/react": "^16.8.6 || ^17.0.0",
        "@types/react-dom": "^16.8.6 || ^17.0.0",
        "react": "^16.8.6 || ^17.0.0",
        "react-dom": "^16.8.6 || ^17.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fremtind/jokul.git"
    },
    "bugs": {
        "url": "https://github.com/fremtind/jokul/issues"
    }
}

{
    "name": "@fremtind/jokul",
    "version": "0.24.1",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "description": "JÃ¸kul monopakke",
    "homepage": "https://github.com/fremtind/jokul/tree/main/packages/jokul",
    "keywords": [],
    "license": "MIT",
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "files": [
        "./build",
        "./styles"
    ],
    "main": "./build/cjs/index.cjs",
    "exports": {
        ".": {
            "import": {
                "default": "./build/es/index.js",
                "types": "./build/es/index.d.ts"
            },
            "require": {
                "default": "./build/cjs/index.cjs",
                "types": "./build/cjs/index.d.cts"
            }
        },
        "./core": {
            "import": {
                "default": "./build/es/core/index.js",
                "types": "./build/es/core/index.d.ts"
            },
            "require": {
                "default": "./build/cjs/core/index.cjs",
                "types": "./build/cjs/core/index.d.cts"
            }
        },
        "./core/tokens.less": "./src/core/tokens.less",
        "./core/jkl": "./src/core/jkl/_index.scss",
        "./hooks": {
            "import": {
                "default": "./build/es/hooks/index.js",
                "types": "./build/es/hooks/index.d.ts"
            },
            "require": {
                "default": "./build/cjs/hooks/index.cjs",
                "types": "./build/cjs/hooks/index.d.cts"
            }
        },
        "./utilities": {
            "import": {
                "default": "./build/es/utilities/index.js",
                "types": "./build/es/utilities/index.d.ts"
            },
            "require": {
                "default": "./build/cjs/utilities/index.cjs",
                "types": "./build/cjs/utilities/index.d.cts"
            }
        },
        "./components": {
            "import": {
                "default": "./build/es/components/index.js",
                "types": "./build/es/components/index.d.ts"
            },
            "require": {
                "default": "./build/cjs/components/index.cjs",
                "types": "./build/cjs/components/index.d.cts"
            }
        },
        "./styles/*": "./styles/*"
    },
    "scripts": {
        "generate:tokens": "node tokens.build.mjs",
        "build": "pnpm run /compile:*/",
        "dev": "babel --out-dir=. dev-server.mjs && node dev-server.js",
        "compile:style": "node build-styles.mjs",
        "compile:scripts": "vite build --config vite.build.config.mjs",
        "refactor": "sed -i \"s/\\.js'/\\.cjs'/g\" build/cjs/**/*.d.cts",
        "test": "vitest"
    },
    "peerDependencies": {
        "react": "^18.0.0"
    },
    "optionalDependencies": {
        "@floating-ui/react": ">0.24.1 <0.27",
        "@react-aria/toast": "^3.0.0-beta.1",
        "@react-stately/toast": "^3.0.0-beta.0",
        "date-fns": "^2.30.0",
        "framer-motion": ">7.10.2 <12",
        "react-a11y-dialog": "^6.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.25.6",
        "@babel/preset-react": "^7.24.7",
        "@rollup/plugin-terser": "^0.4.4",
        "@vitejs/plugin-react": "^4.3.3",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "autoprefixer": "^10.4.14",
        "change-case": "^4.1.2",
        "clsx": "^2.1.1",
        "cssnano": "^7.0.6",
        "cssnano-preset-lite": "^4.0.3",
        "glob": "^11.0.0",
        "ink": "^5.0.1",
        "ink-select-input": "^6.0.0",
        "jsdom": "^25.0.1",
        "nanoid": "^3.3.6",
        "postcss": "^8.4.24",
        "react-hook-form": "^7.44.3",
        "rollup-plugin-node-externals": "^7.1.3",
        "rollup-plugin-visualizer": "^5.12.0",
        "sass-embedded": "^1.78.0",
        "style-dictionary": "^3.8.0",
        "vite": "^5.2.0",
        "vite-plugin-dts": "^4.1.0",
        "vitest": "^2.1.3",
        "vitest-axe": "^0.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fremtind/jokul.git"
    },
    "bugs": {
        "url": "https://github.com/fremtind/jokul/issues"
    },
    "babel": {
        "presets": [
            "@babel/preset-react"
        ]
    }
}

{
    "name": "@fremtind/jokul",
    "version": "4.0.0-next.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "description": "JÃ¸kul monopakke",
    "homepage": "https://github.com/fremtind/jokul/tree/main/packages/jokul",
    "keywords": [],
    "license": "MIT",
    "sideEffects": ["*.css", "*.scss"],
    "files": ["./dist", "./styles", "./src/fonts"],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./core": {
            "types": "./dist/core/index.d.ts",
            "default": "./dist/core/index.js"
        },
        "./core/tokens.less": "./src/core/tokens.less",
        "./styles/core": "./styles/core/core.scss",
        "./styles/core/jkl": "./styles/core/jkl/_index.scss",
        "./styles/fonts": "./styles/fonts/_index.scss",
        "./styles": "./styles/styles.scss",
        "./styles/*": "./styles/*",
        "./tailwind": {
            "types": "./dist/tailwind/index.d.ts",
            "default": "./dist/tailwind/index.js"
        },
        "./hooks": {
            "types": "./dist/hooks/index.d.ts",
            "default": "./dist/hooks/index.js"
        },
        "./utilities": {
            "types": "./dist/utilities/index.d.ts",
            "default": "./dist/utilities/index.js"
        },
        "./styles/components/*": "./styles/components/*/_index.scss",
        "./*": {
            "types": "./dist/components/*/index.d.ts",
            "default": "./dist/components/*/index.js"
        }
    },
    "scripts": {
        "generate:tokens": "tsx ./src/core/tokens/style-dictionary/build.ts",
        "build": "pnpm run /compile:*/",
        "dev": "babel --out-dir=. dev-server.mjs && node dev-server.js",
        "compile:style": "node build-styles.mjs",
        "compile:scripts": "tsdown",
        "test": "vitest --config vite.test.config.mjs",
        "figma:test": "figma connect publish --dry-run",
        "figma:publish": "figma connect publish"
    },
    "dependencies": {
        "downshift": "^7.6.2",
        "match-sorter": "^6.3.4"
    },
    "optionalDependencies": {
        "@floating-ui/react": "0.24.1 - 0.27",
        "@react-aria/toast": "3.0.0-beta.18",
        "@react-stately/toast": "3.0.0-beta.7",
        "react-a11y-dialog": "^6.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@figma/code-connect": "^1.3.8",
        "@types/react": "18.3.1",
        "autoprefixer": "^10.4.21",
        "change-case": "^5.4.4",
        "cssnano": "^7.1.0",
        "cssnano-preset-lite": "^4.0.4",
        "dayjs": "^1.11.19",
        "glob": "^11.0.3",
        "ink": "^5.1.0",
        "ink-select-input": "^6.0.0",
        "jsdom": "^26.1.0",
        "nanoid": "^5.1.5",
        "postcss": "^8.5.6",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.62.0",
        "react-is": "^18.3.1",
        "rollup-plugin-node-externals": "^8.0.1",
        "rollup-plugin-visualizer": "^6.0.3",
        "sass-embedded": "^1.90.0",
        "style-dictionary": "^5.0.1",
        "tailwindcss": "^3.4.17",
        "tsdown": "0.17.0",
        "tsx": "^4.20.6",
        "vi-canvas-mock": "^1.0.0",
        "vite": "npm:rolldown-vite@latest",
        "vitest": "^3.2.4",
        "vitest-axe": "^0.1.0"
    },
    "peerDependencies": {
        "@types/react": "^18.3.1 || ^19.0.0",
        "react": "^18.3.1 || ^19.0.0",
        "react-dom": "^18.3.1 || ^19.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fremtind/jokul.git"
    },
    "bugs": {
        "url": "https://github.com/fremtind/jokul/issues"
    },
    "babel": {
        "presets": ["@babel/preset-react"]
    },
    "gitHead": "2728cf20df66dd1c647cdffb49aab5365433abdb"
}

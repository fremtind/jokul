{
    "name": "@fremtind/jkl-text-input-react",
    "version": "11.2.6",
    "publishConfig": {
        "access": "public"
    },
    "description": "Jøkul react text input component",
    "homepage": "https://github.com/fremtind/jokul/tree/main/packages/text-input-react",
    "keywords": [
        "text",
        "field",
        "textfield",
        "textarea",
        "input",
        "form",
        "jøkul",
        "fremtind"
    ],
    "license": "MIT",
    "types": "./build/index.d.ts",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "browser": "./build/esm/index.js",
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "directories": {
        "lib": "build"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "clean": "rimraf node_modules/ build/ node_modules/",
        "build:types": "tsc -p tsconfig-for-declarations.json",
        "build:scripts": "node ./esbuild.prod.mjs",
        "build": "run-s build:*",
        "test": "jest --testMatch '**/text-input-react/**/*.test.+(ts|tsx|js)' --config=../../jest.config.js",
        "dev:js": "ESBUILD_WATCH=true node ./esbuild.dev.mjs",
        "dev:server": "node ./dist/server.js",
        "dev": "node ./esbuild.dev.mjs && run-p dev:*"
    },
    "dependencies": {
        "@fremtind/jkl-core": "^11.3.0",
        "@fremtind/jkl-icon-button-react": "^2.0.16",
        "@fremtind/jkl-icons-react": "^6.0.10",
        "@fremtind/jkl-react-hooks": "^10.2.7",
        "@fremtind/jkl-text-input": "^9.1.12",
        "classnames": "^2.3.2",
        "downshift": "^7.0.1",
        "match-sorter": "^6.3.1"
    },
    "devDependencies": {
        "@types/match-sorter": "^6.0.0"
    },
    "peerDependencies": {
        "@types/react": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "@types/react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "react": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fremtind/jokul.git"
    },
    "bugs": {
        "url": "https://github.com/fremtind/jokul/issues"
    }
}
